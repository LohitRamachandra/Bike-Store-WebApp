@model Bike.Web.Models.ViewModels.ModelViewModel;
@using Bike.Web.Extensions;
@{
    ViewData["Title"] = "Edit";
}

<br />
<h2 class="text-info">Edit Model of Vehicle</h2>
<form method="post" action="Edit">
    <input hidden asp-for="Model.Id" />
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Makes"></label>
        </div>
        <div class="col-4">
            <select asp-for="Model.MakeID" asp-items="Model.Makes.ToSelectListItems()" class="form-control"></select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Model.Name"></label>
        </div>
        <div class="col-4">
            <input asp-for="Model.Name" class="form-control" />
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Update" />
            @*<button id="Button" type="submit" name="submit" formmethod="post" class="btn btn-primary">Update</button>*@
            <a asp-action="Index" class="btn btn-success">Back</a>
        </div>
    </div>
</form>

